FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY src ./src
COPY tsconfig.json ./
COPY .eslintrc.js ./
COPY .prettierrc ./

# Note: shared types are mounted via volume in docker-compose.yml

# Expose port
EXPOSE 3001

# Start development server
CMD ["npm", "run", "dev"]