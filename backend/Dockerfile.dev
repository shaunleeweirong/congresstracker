FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy shared types
COPY ../shared /app/shared

# Copy source code
COPY src ./src
COPY tsconfig.json ./
COPY .eslintrc.js ./
COPY .prettierrc ./

# Expose port
EXPOSE 3001

# Start development server
CMD ["npm", "run", "dev"]