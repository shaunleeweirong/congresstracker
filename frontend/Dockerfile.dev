FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy shared types
COPY ../shared /app/shared

# Copy source code
COPY src ./src
COPY public ./public
COPY next.config.ts ./
COPY tsconfig.json ./
COPY tailwind.config.ts ./
COPY components.json ./

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]